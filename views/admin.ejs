<%-include ('templates/header');-%>


<div class="well">
<form action="/admin" method="POST" class="form-horizontal">
<fieldset>

<!-- Event Settings Form -->
<legend style="text-align: center;">Event Settings</legend>

<!-- Event Name-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Event Name</label>  
  <div class="col-md-4">
  <input type="text" id="eventName" name="eventName" class="form-control input-md" required="">
  <span class="help-block">Event Name</span>  
  </div>
</div>

<!-- TBA Event Code-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">TBA Event Code</label>  
  <div class="col-md-4">
  <input type="text" id="eventCode" name="eventCode" class="form-control input-md" required="">
  <span class="help-block">Event Code from TBA</span>
  </div>
</div>

<!-- TBA Auth ID Input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">TBA Auth ID</label>  
  <div class="col-md-4">
  <input type="text" id="tba_Key" name="tba_Key" class="form-control input-md">
  <span class="help-block">Contact TBA for this ID</span>  
  </div>
</div>

<!-- Save Button -->
<div class="form-group">
  <div class="row align-items-end" style="text-align: center;">
    <button value="submit" type="submit" class="btn btn-success" id="saveEventBtn"">Save Event</button>
    <button id="Load_Teams" name="singlebutton" class="btn btn-primary">Load Teams</button>
    <br><br>
    <button id="Delete_Teams" name="singlebutton" class="btn btn-warning">Delete Teams</button>
    <button id="Delete_Event" name="singlebutton" class="btn btn-danger">Delete Event</button>
  </div>
</div>

</fieldset>

</form>
</div>  



<%- include('templates/footer'); -%>

